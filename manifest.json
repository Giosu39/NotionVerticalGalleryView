{
  "manifest_version": 3,
  "name": "Notion Vertical Gallery",
  "version": "1.0",
  "description": "Adds a toggle to activate vertical mode in Notion galleries, with customizable height.",
  "permissions": [
        "storage",
        "declarativeContent"
    ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Vertical Gallery Options",
    "default_popup": "options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.notion.so/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png"
  }
}